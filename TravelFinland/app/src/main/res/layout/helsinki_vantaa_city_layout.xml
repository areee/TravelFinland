<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/suurkirkko_helsinki"
    tools:context=".VantaaActivity">
    <!--android:animateLayoutChanges="true"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lapland_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:text="@string/city_layout_text"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@android:drawable/ic_dialog_info" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lapland_layout_longer_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="50sp"
            android:text="Nu är du i Helsingfors. Börja från övning 1 och sen fortsätt med andra övningar."
            android:textColor="@android:color/white"
            android:textSize="31sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/exerciseButton1"
                android:layout_column="0"
                android:layout_margin="75sp"
                android:width="300dp"
                android:height="200dp"
                android:background="@drawable/gradient_green"
                android:text="@string/exercise_1" />

            <Button
                android:id="@+id/exerciseButton2"
                android:layout_column="0"
                android:layout_margin="75sp"
                android:width="300dp"
                android:height="200dp"
                android:background="@drawable/gradient_green"
                android:text="@string/exercise_2" />
            <!--android:background="#ff41ff40"-->

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/exerciseButton3"
                android:layout_column="0"
                android:layout_margin="75sp"
                android:width="300dp"
                android:height="200dp"
                android:background="@drawable/gradient_green"
                android:text="@string/exercise_3" />

            <Button
                android:id="@+id/exerciseButton4"
                android:layout_column="0"
                android:layout_margin="75sp"
                android:width="300dp"
                android:height="200dp"
                android:background="@drawable/gradient_green"
                android:text="@string/exercise_4" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
