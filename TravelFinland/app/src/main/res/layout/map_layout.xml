<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finland_map_new"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <!--android:animateLayoutChanges="true"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_layout_text"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:text="@string/map_layout_exercise_text"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:textSize="27sp" />

    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/rovaniemiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rovaniemi_city_name"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map_button"
            android:layout_x="582dp"
            android:layout_y="222dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/ouluButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oulu_city_name"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map_button"
            android:layout_x="575dp"
            android:layout_y="332dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/vaasaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vaasa_city_name"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map_button"
            android:layout_x="458dp"
            android:layout_y="472dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/turkuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turku_city_name"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map_button"
            android:layout_x="467dp"
            android:layout_y="682dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/vantaaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vantaa_city_name"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/map_button"
            android:layout_x="555dp"
            android:layout_y="695dp"
            android:background="@android:color/transparent" />

    </AbsoluteLayout>

</RelativeLayout>
