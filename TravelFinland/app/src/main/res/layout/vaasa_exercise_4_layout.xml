                    android:layout_toRightOf="@id/verb_button5"
                    android:fontFamily="serif"
                    android:text=" att "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text3"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="besöka"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button6"
                    android:fontFamily="serif"
                    android:text=" marknaden där det självklart "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text4"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="såldes"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button7"
                    android:fontFamily="serif"
                    android:text=" ballonger, sockervadd och"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/body_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="lakritsremmar. De flesta på torget "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text6"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="stod"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button8"
                    android:fontFamily="serif"
                    android:text=" ändå med blickarna "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text7"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="vända"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button9"
                    android:fontFamily="serif"
                    android:text=" mot scenen och"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/verb_button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="lyssnade på"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button10"
                    android:fontFamily="serif"
                    android:text=" musik. Ibland "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text9"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="fylldes"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button11"
                    android:fontFamily="serif"
                    android:text=" trottoarkanterna av människor som "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text10"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="beskådade"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/body_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="bland annat fackförbundens, bilarnas och motorcyklarnas parader."
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/verb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verben: "
                    android:textColor="#ff004c99"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/verb_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_text"
                    android:textColor="#ff004c99"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/verb_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_number"
                    android:text="\t / 12"
                    android:textColor="#ff004c99"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginRight="10sp"
                    android:background="#ff66ff66"
                    android:text="@string/cancel_button_text" />

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_toRightOf="@id/cancel_button"
                    android:background="@drawable/info_button_color_changed" />

                <Button
                    android:id="@+id/check_button"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/info_button"
                    android:background="#ff66ff66"
                    android:text="@string/check_button_text" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>