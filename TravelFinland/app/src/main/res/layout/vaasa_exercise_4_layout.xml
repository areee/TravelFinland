                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text2"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="fick"
                    android:textColor="#ff000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button2"
                    android:fontFamily="serif"
                    android:text=" vasaborna "
                    android:textColor="#ff000000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/verb_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text3"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="njuta av"
                    android:textColor="#ff000000"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="en solig första maj på torget."
                    android:textColor="#ff000000"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/body_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Det mesta kring torget "
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/verb_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/body_text1"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="gick"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/verb_button4"
                    android:fontFamily="serif"
                    android:text=" till som en traditionsenlig första maj. Många vasabor"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/verb_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:text="valde"
                    android:textColor="#ff000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/body_text3"
